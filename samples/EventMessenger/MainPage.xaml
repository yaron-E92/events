<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventMessenger.MainPage">
    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="12">
            <Label Text="Maui Event Messenger" FontSize="24" HorizontalOptions="Center" />
            <Label Text="Local Host" />
            <Label Text="{Binding HostHint}" FontAttributes="Bold" />

            <Label Text="My Port" />
            <HorizontalStackLayout Spacing="8">
                <Entry Text="{Binding MyPort}" Keyboard="Numeric" HorizontalOptions="FillAndExpand" />
                <Button Text="Start Listener" Clicked="OnStartListening" />
            </HorizontalStackLayout>

            <Label Text="Peer Host" />
            <Entry Text="{Binding PeerHost}" Placeholder="Hostname or IP" />

            <Label Text="Peer Port" />
            <HorizontalStackLayout Spacing="8">
                <Entry Text="{Binding PeerPort}" Keyboard="Numeric" HorizontalOptions="FillAndExpand" />
                <Button Text="Connect" Clicked="OnConnect" />
            </HorizontalStackLayout>

            <Label Text="Message" />
            <Entry Text="{Binding MessageText}" Placeholder="Type a message" />
            <Button Text="Send" Clicked="OnSendMessage" />

            <Label Text="Messages" FontAttributes="Bold" />
            <CollectionView ItemsSource="{Binding Messages}" HeightRequest="300">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Label Text="{Binding .}" />
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
